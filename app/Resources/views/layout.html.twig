{# src/OC/PlatformBundle/Resources/views/layout.html.twig #}

<!DOCTYPE HTML>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %} Simplon Platform {% endblock %}</title>

    {% block stylesheet %}
      <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    {% endblock %}
  </head>

  <body>
    <div class="container">
      <div id="header" class="jumbotron">
        <h1>Plateforme Simplon Stage</h1>
        <p> projet fait sous Symfony 3!</p>
        <p>
          <a class="btn btn-primary btn-lg" href="https://openclassrooms.com/courses/developpez-votre-site-web-avec-le-framework-symfony">
            Cours OC!
          </a>
        </p>
      </div>

      <div class="row">
        <div id="menu" class="col-md-3">
          <h3>Les Annonces!</h3>
          <ul class="nav nav-pills nav-stacked">
            <li><a href="{{ path('oc_platform_home') }}">Accueil</a></li>
            <li><a href="{{ path('oc_platform_add') }}">Ajouter une Annonce</a></li>
          </ul>

          <h4>Derni√®res Annonces</h4>
          {{ render(controller("OCPlatformBundle:Advert:menu", {'limit':3} )) }}
        </div>
        <div id="content" class="col-md-9">
        
          {% block body %}
          {% endblock %}
        </div>
      </div>

      <hr>

      <footer>
        <p>JDLR @ {{ 'now'|date('Y') }}</p>
      </footer>
    </div>

    {% block javascript %}
      <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
      <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    {% endblock %}

  </body>
</html>